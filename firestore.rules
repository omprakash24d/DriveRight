
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check for admin custom claim
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    // Default deny all reads and writes unless specified below
    match /{document=**} {
      allow read, write: if false;
    }

    // Publicly readable collections (e.g., for courses, instructors)
    match /courses/{courseId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /instructors/{instructorId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /testimonials/{testimonialId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /trainingServices/{serviceId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /onlineServices/{serviceId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /enhancedTrainingServices/{serviceId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /enhancedOnlineServices/{serviceId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /settings/siteConfiguration {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Student/User specific data
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
    }
    match /users/{userId}/enrolledCourses/{courseId} {
      allow read: if request.auth.uid == userId;
    }

    // Data that can be read publicly for lookups, but written by admins
    match /students/{studentId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /testResults/{resultId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /certificates/{certificateId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Public write for forms, but only readable by admins
    match /enrollments/{enrollmentId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }
    match /refresherRequests/{requestId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }
    match /llInquiries/{inquiryId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }
    match /licensePrintInquiries/{inquiryId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }

    // Service booking collections - Allow creation for payments, admin can read/modify
    match /serviceBookings/{bookingId} {
      allow create: if true; // Allow payment API to create bookings
      allow read, update, delete: if isAdmin();
    }
    match /transactions/{transactionId} {
      allow create: if true; // Allow payment API to create transaction records
      allow read, update, delete: if isAdmin();
    }

    // Admin-only collections (temporarily open for development)
    match /auditLogs/{logId} {
      allow read, write: if true; // Temporarily open for development - should be isAdmin() in production
    }
    match /lessons/{lessonId} {
        allow read, write: if isAdmin();
    }
    match /rateLimits/{ip} {
      allow read, write: if true; // Open for rate limiter functionality
    }
  }
}
